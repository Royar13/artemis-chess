<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Artemis Chess" SizeToContent="WidthAndHeight" Padding="10" WindowStartupLocation="CenterScreen">
    <StackPanel x:Name="MainContainer">
        <WrapPanel>
            <Canvas x:Name="Board" Width="500" Height="500">

            </Canvas>
            <ScrollViewer Height="500">
                <TextBlock Text="{Binding Path=MovesList}" Width="100" VerticalAlignment="Stretch" Margin="10,0,0,0" Padding="5" TextWrapping="WrapWithOverflow" Background="#FFF3F3F3"></TextBlock>
            </ScrollViewer>
        </WrapPanel>

        <WrapPanel Margin="0,40,0,0">
            <Button>Undo Move</Button>
            <Button Margin="10,00,0,0" Width="100" HorizontalAlignment="Left">New Game</Button>
        </WrapPanel>
    </StackPanel>
</Window>
